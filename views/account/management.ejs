<%# The content heading defining title and h1 %>
<% if (title) { %>
<h1><%- title %></h1>
<% } else {
    res.redirect('/')
} %>
    
<%# The message block commented out for now as usage is not garunteed %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>

<%# The content %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>

<p>You're logged in as an <%= locals.accountData.account_type %></p>

<a href="./update" title="Update User Information">Update your user information</a>

<%- additional %>