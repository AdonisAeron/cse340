<%# The content heading defining title and h1 %>
<% if (title) { %>
<h1><%- title %></h1>
<% } else {
    res.redirect('/')
} %>
 
 <%# The message block commented out for now as usage is not garunteed %>

 <%- messages() %>

 <% if (errors) { %>
     <ul class="notice">
         <% errors.array().forEach(error => { %>
             <li><%= error.msg %></li>
         <%  }) %>
     </ul>
 <% } %>
    
 <%# The forum for submitting account information / registration %>
 
<div class="forum-container" action="/account/login" method="post">
    <form id="forum" method="POST">
    <label for="account_email">Account Address</label><br>
    <input type="email" id="account_email" name="account_email" required><br>
    <label for="account_password">Password</label><br>
    <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
    <input type="submit" id="login-button" value="Login">
    <span>No account? <a href="./registration">Sign-up</a></span>
    </form>
</div>