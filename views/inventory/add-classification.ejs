<%# The content heading defining title and h1 %>
<% if (title) { %>
<h1><%- title %></h1>
<% } else {
    res.redirect('/')
} %>
    
<%# The message block commented out for now as usage is not garunteed %>
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>
    
<%# The inventory item display makes use of grid to display items by price %>
<div class="forum-container" action="/inv/add-classification" method="post">
    <form id="forum" method="POST">
    <label for="classification_name">Classification Name</label><br>
    <input type="text" id="classification_name" name="classification_name" required><br>
    <input type="submit" id="login-button" value="Add Classification">
    </form>
</div>
            